<Window x:Class="BloodDonorApp.Views.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BloodDonorApp.ViewModels"
        mc:Ignorable="d"
        Title="Blood Donor - Help" Height="500" Width="600" ResizeMode="NoResize" Icon="/Images/icon.png" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Images/background2.jpg" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <TextBlock x:Name="txtHelp" Text="" Margin="34,38,41.6,111.4" FontSize="16" FontStyle="Italic" FontFamily="Times New Roman" Foreground="Gold"/>

        <Button Margin="216,399,228.6,35.4" HorizontalAlignment="Center" Width="149" Click="Button_Click" BorderBrush="Black" BorderThickness="2">
            <Image Source="/Images/Buttons/backButton.png" Width="134" Height="26"></Image>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
